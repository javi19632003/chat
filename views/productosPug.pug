html 
    head 
    title = "Productos Pug"
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    body 
    <div class="container">
        <div class="row">
            <div class="col">
                h1=mensaje
            </div>
        </div>     
        <div class="row">
            <div class="col">
            
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>TITULO</th>
                            <th>PRECIO</th>
                            <th>URL</th>
                        </tr>
                    </thead>
                    <tbody>
                    if (!productos)
                        <tr>
                            <td colspan="4">
                                h3= "NO HAY PRODUCTOS"
                            </td>
                        </tr>
                    else 
                     each produ in productos
                        <tr>
                            td= produ.title 
                            td= produ.price
                            td= produ.thumbail
                            td= produ.id 
                        </tr>
                      
                    </tbody>
                </table>
                
            </div>
        </div>  
        <div class="row">
            <div class="col">
                <a href="/" class="btn btn-outline-danger">Carga de Productos</a>
            </div>
        </div>         
    </div> 